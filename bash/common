function prepend
{
    PATH_VAR=$1
    PPATH=$2
    PATH_CONTENTS=${!PATH_VAR}

    if [[ "$PATH_CONTENTS" != *"$PPATH"* ]]; then
        eval 'export $PATH_VAR=$PPATH:"$PATH_CONTENTS"'
    fi
}
function append
{
    PATH_VAR=$1
    PPATH=$2
    PATH_CONTENTS=${!PATH_VAR}

    if [[ "$PATH_CONTENTS" != *"$PPATH"* ]]; then
        eval 'export $PATH_VAR="$PATH_CONTENTS":$PPATH'
    fi
}

